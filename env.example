# Variables de entorno para Distrofy
# Copia este archivo como .env y modifica los valores según tu entorno

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
POSTGRES_DB=distrofy
POSTGRES_USER=distrofy_user
POSTGRES_PASSWORD=jeanjean123

# =============================================================================
# CONFIGURACIÓN DEL BACKEND
# =============================================================================
# URL de conexión a la base de datos
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/distrofy
SPRING_DATASOURCE_USERNAME=distrofy_user
SPRING_DATASOURCE_PASSWORD=jeanjean123

# Configuración de JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Configuración del servidor
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# Configuración de JWT
JWT_SECRET=clave_secreta_muy_segura_para_desarrollo_local_cambiar_en_produccion
JWT_EXPIRATION=86400000

# Configuración de logging
LOGGING_LEVEL_COM_DISTROFY_BACKEND=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# =============================================================================
# CONFIGURACIÓN DEL FRONTEND
# =============================================================================
NODE_ENV=development
ANGULAR_ENVIRONMENT=development

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================
# Versiones de las imágenes
POSTGRES_VERSION=15-alpine
JAVA_VERSION=17-jdk-slim
NODE_VERSION=18-alpine

# Puertos de los servicios
POSTGRES_PORT=5432
BACKEND_PORT=8080
FRONTEND_PORT=4200
DEBUG_PORT=5005

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Habilitar hot reload
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# Configuración de debugging
JAVA_OPTS=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================
# Para producción, cambia estos valores:
# SPRING_PROFILES_ACTIVE=production
# NODE_ENV=production
# JWT_SECRET=tu_jwt_secret_muy_seguro_y_complejo
# POSTGRES_PASSWORD=tu_password_seguro_y_complejo 